@import "../../../style/skin.wxss";

.main {
	padding: 0rpx !important;
}

.list {
	width: 100%;
	padding: 0rpx 30rpx 20rpx;
	display: flex;
	flex-direction: column;
}

.list .item {
	width: 100%;
	display: flex;
	background-color: #222;
	padding: 25rpx 25rpx;
	overflow: hidden;
	position: relative;
	border-radius: 20rpx;
	margin-bottom: 30rpx;
}

.list .item .left {
	width: 220rpx;
	height: 230rpx;
	border-radius: 20rpx;
	margin-right: 25rpx;
	border-bottom: 4rpx solid var(--projectCompareColor)
}

.list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.list .item .right .top {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.list .item .right .top .title {
	width: 100%;
	font-size: 28rpx;
	font-weight: bold;
	color: #fff;
	margin-bottom: 20rpx;
	margin-top: 14rpx;
}

.list .item .right .top .desc {
	width: 100%;
	font-size: 24rpx;
	color: #aaa;
	margin-bottom: 10rpx;
}

.list .item .right .line {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
}

.list .item .right .line .join {
	color: #999;
	font-size: 24rpx;
	padding: 16rpx 24rpx;
	background-color: #666;
	border-radius: 30rpx;
}

.list .item .right .line .join.comm {
	color: #fff;
	background-color: var(--projectCompareColor);
}

.list .item .right .line .users {
	flex: 1;
	display: flex;
	align-items: center;
}

.list .item .right .line .users .pic-group {
	display: flex;
	padding: 0 10rpx 0 0rpx;
	align-items: center;
}

.list .item .right .line .users .pic-group .pic {
	width: 48rpx !important;
	height: 48rpx !important;
}

.list .item .right .line .users .pic-group .pic {
	margin-left: -20rpx;
	border: 2rpx solid #ccc;
	vertical-align: middle;
}

.list .item .right .line .users .pic-group .pic:first-child {
	margin-left: 0rpx;
}

.list .item .right .line .users .num {
	font-size: 24rpx;
	color: #bbb;
}