@import "../../../../../style/public/comm_box_list.wxss";
@import "../../../style/skin.wxss";

page {
	background-color: #fff;
}

.main {
	padding: 0rpx 0rpx 100rpx;
}

.up {
	width: 100%;
	padding: 0;
}

.up image {
	width: 100%;
}

.down {
	width: 100%;
	box-sizing: border-box;
	padding: 0rpx 0rpx 10rpx;
	z-index: 9999;
	position: relative;
	margin-top: -40rpx;
}

.menu {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	padding: 20rpx 20rpx 30rpx;
	justify-content: flex-start;
	align-items: flex-start;
}

.menu .item {
	width: calc((100% - 20rpx) / 2);
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: flex-start;
	height: 140rpx;
	background-image: linear-gradient(145deg, #E52B61, #ED2C78, #f84ea3);
	border-radius: 16rpx;
	padding: 30rpx;
	position: relative;
}

.menu .item:last-child {
	margin-right: auto;
}

.menu .item:nth-child(2) {
	background-image: linear-gradient(145deg, #E65F28, #E8712C, #f3ab67);
}

.menu .item:nth-child(3) {
	background-image: linear-gradient(145deg, #7314F5, #923bf0, #b464f5);
}

.menu .item:nth-child(4) {
	background-image: linear-gradient(145deg, #003F87, #0d65d1, #4091ee);
}

.menu .item:nth-child(5) {
	background-image: linear-gradient(145deg, #097258, #0c9472, #10af87);
}

.menu .item:nth-child(6) {
	background-image: linear-gradient(145deg, #6a0783, #a011c3, #b431d4);
}

.menu .item:nth-child(2n+1) {
	margin-right: 20rpx;
	margin-bottom: 20rpx;
}

.menu .item .title {
	width: 100%;
	font-size: 30rpx;
	color: #fff;
	font-weight: bold;
	text-align: left;
	z-index: 9;
}

.menu .item .desc {
	margin-top: 10rpx;
	width: 100%;
	font-size: 24rpx;
	color: rgba(255, 255, 255, .5);
	text-align: left;
	z-index: 9;
}

.menu .item image {
	position: absolute;
	right: 10rpx;
	bottom: 20rpx;
	width: 90rpx;
	height: 90rpx;
	opacity: .15;
}

.scroll-x {
	width: 100%;
	padding: 0 28rpx;
}

.scroll-list {
	width: 100%;
	margin-top: 10rpx;
	background-color: #fff;
	white-space: nowrap;
}

.scroll-list .item {
	display: inline-block;
	padding: 0;
	margin-right: 20rpx;
	border-radius: 10rpx;
	overflow: hidden;
	width: 370rpx;
	box-shadow: 1rpx 8rpx 8rpx rgba(230, 225, 226, 0.7);
	margin-bottom: 30rpx;
	position: relative;
	background-image: linear-gradient(125deg, #fff, #eff0f5, #fff);
}

.scroll-list .item .cover {
	height: 185rpx;
	width: inherit;
	border-top-left-radius: inherit;
	border-top-right-radius: inherit;
	position: relative;
	overflow: hidden;
}

.scroll-list .item .cover image {
	height: inherit;
	width: inherit;
	border-radius: inherit;
}

.scroll-list .item .title {
	width: 100%;
	font-size: 28rpx;
	display: flex;
	align-items: center;
	padding: 6rpx 10rpx;
	color: #666;
	overflow: hidden;
}

.scroll-list .users {
	width: 100%;
	font-size: 24rpx;
	width: inherit;
	padding: 10rpx 10rpx;
	color: #999;
	display: flex;
	align-items: center;
	height: 68rpx;
}

.scroll-list .users .pic-group {
	display: flex;
	padding: 0 10rpx 0 0rpx;
	align-items: center;
}

.scroll-list .users .pic-group .pic {
	width: 48rpx !important;
	height: 48rpx !important;
	border: 4rpx solid #fff;
	margin-left: -20rpx;
}

.scroll-list .users .pic-group .pic:first-child {
	margin-left: 0rpx;
}

.scroll-list .users .num {
	font-size: 24rpx;
	color: #999;
}


.tab-line {
	width: 100%;
	display: flex;
	justify-content: space-between;
	padding: 20rpx 30rpx 20rpx;
	align-items: center;
	margin-top: 20rpx;
}

.tab-line .item {
	font-size: 34rpx;
	font-weight: bold;
	color: #fff;
	position: relative;
	display: flex;
	align-items: center;
}

.tab-line .item .icon-left {
	width: 14rpx;
	height: 36rpx;
	background-image: linear-gradient(145deg, #08569b, #3995e6, #57addb);
	margin-right: 14rpx;
	border-radius: 10rpx;
}

.tab-line .item1 {
	font-size: 24rpx;
	color: #999;
	padding: 6rpx 24rpx;
	border-radius: 30rpx;
	background-color: #333;
}



.tab-line1 {
	width: 100%;
	display: flex;
	justify-content: center;
	padding: 10rpx 30rpx 10rpx;
	align-items: flex-end;
	margin-top: 50rpx;
	margin-bottom: 10rpx;
}

.tab-line1 .item {
	font-size: 30rpx;
	color: #ccc;
	position: relative;
	padding: 0 30rpx;
}

.tab-line1 .item.cur {
	font-size: 34rpx;
	color: #eee;
	font-weight: bold;
}

.tab-line1 .item.cur:after {
	width: 20%;
	position: absolute;
	bottom: -16rpx;
	left: 50%;
	height: 8rpx;
	content: '';
	border-radius: 30%;
	background-color: var(--projectCompareColor);
	transform: translateX(-50%);
}




.list {
	width: 100%;
	padding: 20rpx 26rpx;
	display: flex;
	flex-direction: column;
}

.list .item {
	width: 100%;
	display: flex;
	align-items: center;
	padding: 10rpx 10rpx;
	margin-bottom: 20rpx;
	overflow: hidden;
	position: relative;
	background-color: #222;
	border-radius: 10rpx;
	border-bottom-right-radius: 20rpx;
	border-top-left-radius: 20rpx;
}

.list .item .mark {
	position: absolute;
	top: 18rpx;
	left: 18rpx;
	background-color: var(--red);
	opacity: .9;
	padding: 4rpx 16rpx;
	border-radius: 6rpx;
	border-bottom-right-radius: 16rpx;
	font-size: 24rpx;
	color: #fff;

	z-index: 9;
}

.list .item .left {
	width: 120rpx;
	height: 130rpx;
	border-radius: 10rpx;
	margin-right: 25rpx;
}

.list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	padding: 5rpx 0;
}

.list .item .right .title {
	width: 100%;
	font-size: 28rpx;
	color: #ddd;
	margin-bottom: 24rpx;
}

.list .item .right .desc {
	width: 100%;
	font-size: 24rpx;
	color: #999;
	display: flex;
	align-items: baseline;
}

.swiper-box {
	width: 100%;
	padding: 10rpx 20rpx;
}

.swiper {
	width: 100%;
	border-radius: 20rpx;
	overflow: hidden;
}

.swiper-item-images {
	width: 100%;
	border-radius: 20rpx;
	overflow: hidden;
}

/*指示点*/
swiper .wx-swiper-dots .wx-swiper-dot {
	width: 40rpx;
	height: 16rpx;
	border-radius: 4rpx;
}

/* 选中指示点的样式 */
swiper .wx-swiper-dot.wx-swiper-dot-active {
	width: 60rpx; 
	border-radius: 10rpx; 
}